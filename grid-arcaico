int[][] grid;
int n=50;

void criagrid(){
  grid=new int[n][n];
 for(int i=0;i<n;i++) 
    for(int j=0;j<n;j++);
  }
    
void mostragrid(){
  float l=width/n;
  float h=height/(float)n;
   for(int i=0;i<n;i++) {
    for(int j=0;j<n;j++){
      if(grid[i][j]==0)
     fill(255);
     else
     fill(grid[i][j]== 1 ? #03FF15 : #0503FF);
     rect(i*l,j*h,l,h);
}
   }
}
    
void setup(){
criagrid();
size(600,600);
}

void draw(){
  mostragrid();
}
